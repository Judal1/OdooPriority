<?xml version="1.0"?>
<odoo>
    <record id="project_importance_settings_action" model="ir.actions.act_window">
        <field name="name">Importance</field>
        <field name="res_model">priority.importance</field>
        <field name="view_mode">list</field>
    </record>
    <record id="project_importance_view_list" model="ir.ui.view">
        <field name="name">priority.importance.list</field>
        <field name="model">priority.importance</field>
        <field name="arch" type="xml">
            <list string="List Offers" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="status" width="50%"/>
            </list>
        </field>
    </record>
</odoo>