<?xml version="1.0"?>
<odoo>
    <record id="project_complexity_settings_action" model="ir.actions.act_window">
            <field name="name">Complexity</field>
            <field name="res_model">priority.complexity</field>
            <field name="view_mode">list</field>
    </record>

    <record id="project_complexity_view_list" model="ir.ui.view">
        <field name="name">priority.complexity.list</field>
        <field name="model">priority.complexity</field>
        <field name="arch" type="xml">
            <list string="List Offers" editable="bottom">
                <field name="color" widget='color_picker' width="50%%"/>
                <field name="name"/>
            </list>
        </field>
    </record>
</odoo>